@model Phonebook_program.Models.Contact

<h2>Редактирование контакта:</h2>

<form asp-action="EditContact" method="post" asp-controller="contact" asp-route-id="@Model.Id">
    <div class="box col-lg-12">
      <div class="row">
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="Name">Имя</label><br />
                <input type="text" asp-for="Name" value="@Model.Name" />
            </p>
        </div>
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="Surname">Фамилия</label><br />
                <input type="text" asp-for="Surname" value="@Model.Surname" />
            </p>
        </div>
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="Age">Возраст</label><br />
                <input type="number" asp-for="Age" value="@Model.Age" />
            </p>
        </div>
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="Email">Почта</label><br />
                <input type="text" asp-for="Email" value="@Model.Email" />
            </p>
        </div>
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="PhoneNumber">Телефон</label><br />
                <input type="text" asp-for="PhoneNumber" value="@Model.PhoneNumber" />
            </p>
        </div>
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="Address">Адрес</label><br />
                <input type="text" asp-for="Address" value="@Model.Address" />
            </p>
        </div>
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="City">Город</label><br />
                <input type="text" asp-for="City" value="@Model.City" />
            </p>
        </div>
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="Region">регион</label><br />
                <input type="text" asp-for="Region" value="@Model.Region" />
            </p>
        </div>
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="PostalCode">Индекс</label><br />
                <input type="text" asp-for="PostalCode" value="@Model.PostalCode" />
            </p>
        </div>
        <div class="col-md-3 text-center">
            <p>
                <label asp-for="Country">Страна</label><br />
                <input type="text" asp-for="Country" value="@Model.Country" />
            </p>
        </div>
        <hr />
        <div class="row col-md-12 text-center">
            <p>
                <input type="submit" value="Сохранить" />
            </p>
        </div>
        </div>
    </div>
</form>
